{
  "name": "typescript-ddd-course",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/CodelyTV/typescript-ddd-course"
  },
  "license": "",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.7.0"
  },
  "bin": {
    "lambda": "src/apps/lambda/bin/lambda.js"
  },
  "scripts": {
    "dev:todo:backend": "NODE_ENV=dev ts-node-dev -r tsconfig-paths/register --ignore-watch node_modules ./src/apps/Todo/backend/start.ts",
    "lint": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest --detectOpenHandles",
    "start:mooc:backend": "NODE_ENV=production node dist/src/apps/mooc/backend/start",
    "start:backoffice:backend": "NODE_ENV=production node dist/src/apps/backoffice/backend/start",
    "start:todo:backend": "NODE_ENV=production node dist/src/apps/Todo/backend/start",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "build:backoffice:frontend": "cd ./src/apps/backoffice/frontend && npm run build",
    "command:todo:rabbitmq": "NODE_ENV=production ts-node src/apps/Todo/backend/command/runConfigureRabbitMQCommand",
    "typeorm": "typeorm-ts-node-commonjs",
    "cdk": "cdk",
    "compile": "tsc"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.428.0",
    "@elastic/elasticsearch": "^7.11.0",
    "@vendia/serverless-express": "^4.10.4",
    "amqplib": "^0.8.0",
    "aws-cdk": "2.89.0",
    "aws-cdk-lib": "2.89.0",
    "body-parser": "^1.19.0",
    "bodybuilder": "^2.4.0",
    "bson": "^4.4.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "constructs": "^10.0.0",
    "convict": "^6.2.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "esbuild": "^0.19.4",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "express-validator": "^6.10.0",
    "glob": "^7.1.6",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "mongodb": "^5.2.0",
    "node-dependency-injection": "^2.7.3",
    "nodemailer": "^6.9.6",
    "nunjucks": "^3.2.3",
    "pg": "^8.7.1",
    "safe-stable-stringify": "^2.4.3",
    "source-map-support": "^0.5.21",
    "typeorm": "^0.3.17",
    "uuid": "^8.3.2",
    "uuid-validate": "0.0.3",
    "winston": "^3.3.3",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/aws-lambda": "^8.10.124",
    "@types/bson": "^4.0.3",
    "@types/compression": "^1.7.0",
    "@types/connect-flash": "0.0.36",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/cors": "^2.8.12",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.7",
    "@types/glob": "^7.1.3",
    "@types/helmet": "0.0.48",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.8.4",
    "@types/nodemailer": "^6.4.11",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@types/uuid-validate": "0.0.1",
    "autoprefixer": "^10.4.7",
    "cucumber": "^6.0.5",
    "faker": "^5.5.3",
    "husky": "^5.1.3",
    "jest": "^28.1.1",
    "lint-staged": "10.5.4",
    "postcss": "^8.4.14",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "tailwindcss": "^3.1.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "tsconfig-paths": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
